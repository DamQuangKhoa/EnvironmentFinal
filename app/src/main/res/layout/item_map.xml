    android:layout_width="500dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:contentDescription=""
        android:id="@+id/imgHinhHienThi"
        android:layout_width="match_parent"
